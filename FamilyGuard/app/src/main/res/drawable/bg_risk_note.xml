<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background (primary/5) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0DEE8C2B"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
    
    <!-- Left Border (primary) -->
    <item android:right="298dp"> <!-- Hacky way to simulate border-left, but cleaner is to use inset or just a narrow shape -->
       <shape android:shape="rectangle">
            <solid android:color="#EE8C2B"/>
            <corners 
                android:topLeftRadius="4dp"
                android:bottomLeftRadius="4dp"/>
       </shape>
    </item>
    <!-- Better Approach for XML Left Border: A 2dp wide line aligned left -->
     <item android:gravity="start" android:width="2dp">
         <shape>
             <solid android:color="#EE8C2B"/>
              <corners 
                android:topLeftRadius="4dp"
                android:bottomLeftRadius="4dp"/>
         </shape>
    </item>
</layer-list>
